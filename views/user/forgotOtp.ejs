

<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center">OTP Verification</h2>

        <% if (typeof message !== 'undefined') { %>
            <p class="text-center text-muted"><%= message %></p>
          <% } %>
        
          <div id="timer">1:59</div>


        <form action="/forgotOtp" method="post">
          <div class="form-group">
            <label for="otp">One-Time Password (OTP)</label>
            <input type="hidden" name="userId" value="<%=userId%>">
            <input type="text" class="form-control" name="otp" id="otp" placeholder="Enter the OTP" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Verify OTP</button>
        </form>
      </div>
    </div>
  </div>



  <script>
    const timerElement = document.getElementById('timer');
  const endTime = new Date();
  endTime.setMinutes(endTime.getMinutes() + 1);
  endTime.setSeconds(endTime.getSeconds() + 59);
  
  function updateTimer() {
    const currentTime = new Date();
    const remainingTime = endTime - currentTime;
  
    if (remainingTime <= 0) {
      timerElement.textContent = 'Timer Expired';
    } else {
      const minutes = Math.floor((remainingTime % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((remainingTime % (1000 * 60)) / 1000);
      timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }
  }
  
  setInterval(updateTimer, 1000);
  </script>
    