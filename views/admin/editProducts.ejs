<main class="main-wrap">
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Edit Product</h2>
                </div>

            </div>

            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/admin/edit-product?productId=<%=data._id%>" method="post" >
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product Name</label>
                                <input type="text" value="<%=data.name%>" class="form-control" id="product_name"
                                    name="name">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea class="form-control" rows="4"
                                    name="description"><%=data.description%></textarea>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Color</label>
                                        <input value="<%=data.color%>" type="text" class="form-control"
                                            name="color">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label">Size</label>
                                    <select class="form-select" name="size" value="<%=data.size%>">
                                        <option><%=data.size%></option>
                                        <option> /n </option>
                                        <option> 128 GB</option>
                                        <option> 256 GB</option>
                                        <option> 512 GB</option>
                                        <option> 1 TB </option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Price</label>
                                <input type="number" value="<%=data.price%>" class="form-control"
                                    id="product_name" name="price">
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Total</label>
                                <input type="number" value="<%=data.totalQty%>" class="form-control"
                                    id="product_name" name="totalQty">
                            </div>

                            <div class="card-header">
                                <h4>Category</h4>
                            </div>
                            <div class="card-body">
                                <div class="row gx-1">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label">Main Category</label>
                                        <select id="main-category" class="form-select" name="category" required="">
                                            <option><%=data.category%></option>
                                            <% for (let i = 0; i < category.length; i++) { %>
                                                <option> <%=category[i].name %> </option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label">Sub-category</label>
                                        <select id="sub-category" class="form-select" name="subCategory" required="">
                                            <!-- Subcategories will be loaded dynamically -->
                                            <option><%=data.subCategory%></option>
                                            <% for (let i=0; i < category.length; i++){ %>
                                                <% for (let j=0; j < category[i].subCategory.length; j++){ %>
                                                <option><%=category[i].subCategory[j]%></option>
                                                    <% } %>
                                                <% } %>
                                        </select>
                                    </div>
                                    <!-- <div class="card-header">
                                        <h4>Media</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="input-upload">
                                            <!-- Set the "src" attribute of the "imgView" element to the current image URL -->
                                            
                                                <!-- <img src="" alt="" style="width: 75px; height: 75px" id="imgView" >
                                              
                                            
                                            <input class="form-control" type="file" name="images" value="upload" onchange="viewImage(event)" multiple>
                                        </div>
                                    </div> --> 
                                </div> <!-- row.// -->
                            </div>
                            <div>
                                <button type="submit" class="btn btn-md rounded font-sm hover-up">Submit</button>
                            </div>
                        </form>
                    </div>
                </div> <!-- card end// -->
            </div>
        </div>

    </section> <!-- content-main end// -->

    <script>
        // Set the value of the hidden input field to the current image URL
        document.addEventListener('DOMContentLoaded', function() {
            const currentImageUrl = document.getElementById('current_image_url').value;
            document.getElementById('imgView').src = currentImageUrl;
        });
    
        function viewImage(event) {
            document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
    